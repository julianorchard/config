{
    "editor.tabCompletion": "on",
    "editor.detectIndentation": false,
    "window.zoomLevel": -1,

    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "php.suggest.basic": false,
    "php.validate.enable": false,
    "emmet.excludeLanguages": [
        "markdown",
        "php"
    ],
    "php.validate.executablePath": "C:\\MAMP\\bin\\php\\php7.2.10\\php.exe",
    "php.executablePath": "C:\\MAMP\\bin\\php\\php7.2.10\\php.exe",
    "phpserver.ip": "127.0.0.1",
    "phpserver.phpPath": "C:\\MAMP\\bin\\php\\php7.2.10\\php.exe",

    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,

    "workbench.colorTheme": "Ayu Light",
    "editor.lineNumbers": "relative",

    "vim.camelCaseMotion.enable": true,
    "vim.leader": ",",
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.useSystemClipboard": false,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vim/vimrc",

    "vim.normalModeKeyBindings": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
    ],

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "window.menuBarVisibility": "compact",
    "workbench.layoutControl.enabled": false,

    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,

    "terminal.integrated.profiles.windows": {
        "PowerShell": {
          "source": "PowerShell",
          "icon": "terminal-powershell",
          "args": ["-ExecutionPolicy", "bypass"]
        }
      },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editorAssociations": {
        "*.jpg": "imagePreview.previewEditor"
    },
    "[php]": {
        "editor.defaultFormatter": "kokororin.vscode-phpfmt"
    },

}
