# bindsym $mod+Shift+t exec --no-startup-id $HOME/.bin/i3bartoggle.sh

bar {
# This bar is just for the systray icons!
  id tray
  workspace_buttons no
  position top
  mode hide
  i3bar_command i3bar --transparency
  hidden_state hide
  modifier Mod1
  tray_output primary
  font pango:file-icons-10, Noto Mono 12
  colors {
    background          $base
    statusline          $text     $base   $text  $rosewater $crust
    separator           $overlay0 $base   $text  $overlay0  $crust
    focused_workspace   $crust    $blue   $crust $crust     $crust
    inactive_workspace  $mantle   $mantle $text  $rosewater $crust
    urgent_workspace    $peach    $base   $peach $overlay0  $crust
  }
}

bar {
  id main
  # mode invisible
  # binding_mode_indicator no
  tray_output none
  i3bar_command i3bar --transparency
  separator_symbol "  "
  strip_workspace_numbers yes
  status_command i3blocks
  hidden_state show
  font pango:file-icons-10, Ubuntu Nerd Font 12
  colors {
    background          $base
    statusline          $text     $base   $text  $rosewater $crust
    separator           $overlay0 $base   $text  $overlay0  $crust
    focused_workspace   $crust    $blue   $crust $crust     $crust
    inactive_workspace  $mantle   $mantle $text  $rosewater $crust
    urgent_workspace    $peach    $base   $peach $overlay0  $crust
  }

}
