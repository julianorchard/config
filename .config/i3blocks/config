[syncthing]
command=[ $(ps ax | grep -v "grep syncthing" | grep "syncthing" | wc -c) -ne 0 ] && echo "" || echo ""
interval=60

[internet]
command=ping -q -c1 google.com &>/dev/null && echo "" || echo ""
interval=5

[battery]
command=echo " $(cat /sys/class/power_supply/BAT0/capacity)%"
interval=5

[time]
command=echo "$(date '+%H:%M')"
interval=5

[time]
command=echo " "
interval=once
