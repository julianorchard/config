[tmux]
command=sessions=$(tmux ls | wc -l) ; echo $sessions | grep -q 'no session' && echo "   0 " || echo "   $sessions "
interval=5
color={{ mauve }}

[internet]
command=[ ! ping -q -c1 google.com &>/dev/null ] && echo "No Internet "
interval=15

[calendar]
command=/home/julian/.bin/pm-cal.py
interval=300

[battery]
command=/home/julian/.bin/battery-block
interval=60

[time]
command=echo " $(date '+%H:%M') "
interval=5
color={{ blue }}


