[tailscale]
command=tscmd=$(tailscale status | awk 'NR==1{ print $1}'); [ $tscmd=="Tailscale" ] && [ $tscmd=="USAGE" ] && echo "   ${tscmd} "
interval=30
color={{ surface2 }}

